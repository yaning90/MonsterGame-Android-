<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yaning.game_monster" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Start"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MonsterBurping"
            android:label="@string/title_activity_game_m" >
        </activity>
        <activity
            android:name=".BurpingAnimation"
            android:label="@string/title_activity_animation" >
        </activity>
        <activity
            android:name=".ChooseGame"
            android:label="@string/title_activity_choose_game" >
        </activity>
    </application>

</manifest>
